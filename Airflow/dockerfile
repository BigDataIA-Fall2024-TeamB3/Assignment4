# Use Python 3.10 as base image for better compatibility
FROM apache/airflow:2.10.2

# Switch to root to install system dependencies
USER root

# Set working directory
#WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    build-essential \
    wget \
    unzip \
    chromium \
    chromium-driver \
    libffi-dev \
    libssl-dev \
    libxml2-dev \
    libxslt-dev \
    zlib1g-dev \
    libjpeg-dev \
    libfreetype6-dev \
    poppler-utils \
    && rm -rf /var/lib/apt/lists/*

USER airflow

# Install Python dependencies directly
RUN pip install --no-cache-dir \
    selenium \
    beautifulsoup4 \
    requests \
    lxml \
    python-dotenv \
    pinecone-client \
    openai \
    pandas \
    docling \
    Pillow \
    tqdm

USER root

RUN mkdir -p /opt/airflow/downloaded_pdfs /opt/airflow/document_images && \
    chown -R airflow:root /opt/airflow/downloaded_pdfs /opt/airflow/document_images

#USER airflow

# Copy application code
#COPY . .

# Create directories for downloads and images
#RUN mkdir -p downloaded_pdfs document_images

# Set environment variables for Chrome
# ENV CHROME_BIN=/usr/bin/chromium \
#     CHROME_PATH=/usr/lib/chromium/ \
#     PYTHONUNBUFFERED=1

# Create a non-root user
# RUN useradd -m appuser && chown -R appuser:appuser /app
